#  StorageClass: {{ .Values.rwxStorageClass }}

OperationsCenter:
  Image:
    dockerImage: {{ .Values.ci.ocImage }}:{{ .Values.ci.version }}
  Platform: {{ env "CI_PLATFORM" | default "aws" }}
  HostName: {{ .Values.ci.hostName }}
  Protocol: https
  ServiceType: ClusterIP
  CasC:
    Enabled: true
  JavaOpts:
    -Dcom.cloudbees.masterprovisioning.kubernetes.KubernetesMasterProvisioning.deleteClaim=true
  ExtraVolumes:
  - name: oc-configmap
    configMap:
      name: oc-configmap
  - name: mc-casc-bundle
    configMap:
      name: mc-casc-bundle
  ExtraVolumeMounts:
  - name: oc-configmap
    mountPath: /var/jenkins_config/oc-configmap
    readOnly: true
  - name: mc-casc-bundle
    mountPath: /var/jenkins_home/jcasc-bundles-store/mc-casc-bundle
    readOnly: true

Hibernation:
  Enabled: true

Ingress:
  Class: alb
  Annotations:
    alb.ingress.kubernetes.io/scheme: internet-facing

Master:
  Image:
    dockerImage: {{ .Values.ci.mcImage }}:{{ .Values.ci.version }}
Agents:
  Image:
    dockerImage: {{ .Values.ci.agentImage }}:{{ .Values.ci.version }}
